# ==============================================
# ðŸš€ PRODUCTION-READY ENVIRONMENT CONFIGURATION
# ==============================================

# âœ… Application Configuration
NODE_ENV=production
PORT=5002
APP_NAME=SwaapApp
APP_VERSION=2.1.0

# âœ… Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long
JWT_REFRESH_SECRET=your_refresh_token_secret_different_from_main
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=10485760

# âœ… Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/swaap_production?retryWrites=true&w=majority

# âœ… Cloud Storage - Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# âœ… Payment Processing - Paystack
PAYSTACK_SECRET_KEY=sk_live_your_live_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_live_public_key
PAYSTACK_CALLBACK_URL=https://yourdomain.com/api/webhook/paystack
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret

# âœ… SMS Service - Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# âœ… Email Service
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# âœ… AI Services - OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# âœ… AWS Services (if using)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket

# âœ… Google Services (for location/geocoding)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# âœ… Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ANALYTICS_ENABLED=true

# âœ… Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=300000
MAX_MEMORY_THRESHOLD=100000000

# âœ… Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_DISPUTE_SYSTEM=true
ENABLE_SOCIAL_VERIFICATION=true

# âœ… Admin Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure_admin_password_change_this

# âœ… Development Only (remove in production)
# DEBUG_MODE=false
# MOCK_PAYMENTS=false
# MOCK_SMS=false
